{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/backend/**/*",
    "test/backend/**/*",
    "src/backend/types.ts",
    "src/img/**/*.svg"
  ],
  "exclude": [
    "node_modules"
  ]
}